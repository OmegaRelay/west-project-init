{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "go",
            "label": "go: build package",
            "command": "build",
            "args": [
                "-o",
                "out/",
            ],
            "problemMatcher": [
                "$go"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "delete_tmp_app",
            "command": "rm",
            "args": [
                "-rf",
                "tmp_app",
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
        }
    ]
}